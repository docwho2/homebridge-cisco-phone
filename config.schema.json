{
  "pluginAlias": "CiscoIPPhone",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "phones": {
        "title": "Cisco IP Phones",
        "type": "array",
        "required": true,
        "items" : {
          "title" : "Phone Config",
          "type" : "object",
          "required" : true,
          "properties" : {
            "IPAddress" : {
              "title" : "IP Address",
              "type" : "string",
              "format" : "ipv4",
              "required" : true,
              "placeholder" : "XXX.XXX.XXX.XXX"
            },
            "DeviceType" : {
              "title" : "Homekit Device Type",
              "type" : "string",
              "default" : "relay",
              "required" : true,
              "oneOf" : [
                { "title" : "Relay" , "enum" : ["relay"] },
                { "title" : "Light Bulb" , "enum" : ["light"] },
                { "title" : "Fan" , "enum" : ["fan"] }
              ]
            }
          }
        }
      }
    }
  }
}